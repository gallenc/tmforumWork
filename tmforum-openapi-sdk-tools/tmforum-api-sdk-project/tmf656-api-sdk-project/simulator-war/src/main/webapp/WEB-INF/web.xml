<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>tmf656-simulator-war</display-name>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
    
    <!-- initialise and shuts down hsqldb before anything else -->
    <listener>
        <listener-class>org.opennms.tmforum.tmf656.web.HsqlDatabaseInitialiser</listener-class>
    </listener>

	<!-- loads application config chain for the underlying services -->
	<!-- and data persistance and web security -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:appconfig-root.xml</param-value>
	</context-param>

	<!-- sets up the spring MVC servlet dispatcher to control the pages -->
	<servlet>
		<servlet-name>mvc-dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:mvc-dispatcher-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>mvc-dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- initialise spring -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Rest Servlet -->
	<servlet>
		<servlet-name>RestApp</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>org.opennms.tmforum.tmf656.rest.RestApp</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>RestApp</servlet-name>
		<url-pattern>/tmf-api/serviceProblemManagement/v3/*</url-pattern>
	</servlet-mapping>
	<!-- interface is at http://localhost:8080/tmf-api/serviceProblemManagement/v3/serviceProblem/3 -->

