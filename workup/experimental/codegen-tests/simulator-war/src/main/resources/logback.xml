<configuration>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<logger name="org.opennms.tmforum" level="debug" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="io.swagger" level="info" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>

	<!-- used to show request mappings in spring 5 -->
	<!--<logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" level="TRACE" > -->
	<logger name="org.springframework.web.servlet.mvc" level="trace">
        <appender-ref ref="CONSOLE" />
	</logger>

	<root level="info">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>
